<header>
  <a href="http://floodlight.us"><%= image_tag "logo_sml", class: "logo_sml big_only" %></a>
  <nav>
    <%= link_to "Rants", posts_path %>
    <!--   <%= link_to "Videos", videos_path %> -->
    <%= link_to "About", user_path(1), class: "navline" %>
    <%= link_to "Contact Us", new_message_path, class: "navline big_only" %>
    <%= link_to "Contact", new_message_path, class: "navline small_only" %>
    <%= link_to "Home", root_path, class: "navline" %>
  </nav>
</header>
<div class="banner_cont">
  <%= image_tag "rant_header.png", class: "banner" %>
</div>
<div class="container">
  <p class="clear"><%= link_to "Floodlight", root_path, class: "post_show_link" %> - <span class="post_show_dest">Rants</span></p>
  <h1 id="rant_header">Floodlight - Rants</h1>
  <p id="rant_sub">Examining a vast array of subjects we aren't all that qualified to talk about, including politics, philosophy, and the media.</p>
  <% @recent_rants.each do |rant| %>
    <div class="post">
      <div class="post_top">
        <%= link_to rant.title, post_path(rant.id), class: "post_title" %>
        <p class="post_date"> - <%= rant.date %></p>
      </div>
      <p class="sub_post"><%= rant.blurb %></p>
    </div>
  <% end %>
  <p id="about_text_bottom">Want to tell us something about the article? Send us a message!</p>
  <div class="space"></div>
  <%= form_for :message, url: messages_path, method: :post do |f| %>
    <%= f.text_field :author, placeholder: "Name (just leave it blank if you don't want to tell us)", class: "author" %>
    <%= f.text_area :text, placeholder: "Message", class: "message" %>
    <div class="message_clear"><%= f.submit "Submit", class: "message_submit" %></div>
  <% end %>
</div>
<footer>
  <%= link_to "Made by nick-brown-dev.com", "http://nick-brown-dev.com" %>
  <p>Copyright 2016</p>
</footer>
